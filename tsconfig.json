{
  "ts-node": {
    "transpileOnly": true
  },
  "compilerOptions": {
    "module": "commonjs",
    "target": "ESNext",
    "rootDir": "src/",
    "outDir": "build/",
    "sourceMap": true,
    "esModuleInterop": true,
    "typeRoots": ["src/types"],
    "strict": true,
    "strictNullChecks": false,
    "allowJs": true
  }
}
